<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3" />
    <TextView
        android:id="@+id/kongbai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="29sp"
        />

    <TextView
        android:id="@+id/timu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="请选出下列正确的选项"
        android:textSize="20dp" />
    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/timu"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/back"/>

    <Button
        android:id="@+id/again"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/timu"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/again" />

    <ImageView
        android:id="@+id/test1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/kongbai"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/test2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/kongbai"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/test1" />

    <ImageView
        android:id="@+id/test3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/test1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/test4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/test2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/test1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/test2"
        android:layout_marginLeft="85dp"
        android:background="@drawable/aa" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/test2"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@id/test1"
        android:background="@drawable/b" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/test3"
        android:layout_marginLeft="85dp"
        android:background="@drawable/c" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/test3"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@id/test1"
        android:background="@drawable/d" />

    <TextView
        android:id="@+id/jieguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="29dp"
        />


</RelativeLayout>